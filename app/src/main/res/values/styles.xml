<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#666</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">#666</item>
        <item name="colorPrimaryDark">@color/primaryVeryDark</item>
        <item name="colorPrimary">@color/primaryDark</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="inputPrimary">

        <item name="android:background">@drawable/input_primary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:width">250dp</item>
        <item name="android:textColorHint">#32FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@android:color/black</item>

    </style>

    <style name="inputDark">

        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="inputLight">

        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="buttonPrimary">

        <item name="android:background">#fff</item>
        <item name="android:textColor">#ed1a3a</item>
        <item name="android:gravity">center</item>
        <item name="android:radius">20dp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="buttonLight">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="buttonLightSolid">

        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="buttonBattle">


        <item name="android:textColor">@color/colorAccent</item>

    </style>


    <style name="artefactNameContainer">

        <item name="android:layout_marginLeft">16dp</item>

    </style>

    <style name="profilProgress" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">

        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/black</item>

    </style>

    <style name="hpProgress" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">

        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/black</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#46bdbf</item>
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>